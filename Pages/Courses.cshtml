@page
@model e_learning.Pages.CoursesModel
@{
}

<div class="text-center my-2">
    <h1 class="display-4">Number of Courses : @Model.courses.Count()</h1>
</div>

<form method="get" class="mt-4 mb-4">
    <div class="row">
        <div class="input-group">
            <input type="text" class="form-control" id="courseName" name="courseName" placeholder="Search products by Name">
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <label for="startDate" class="col-4 col-form-label">Start Date</label>
            <div class="col-12">
                <div class="input-group date" id="datepicker">
                    <input type="date" class="form-control" id="startDate" name="startDate" />
                </div>
            </div>
           
        </div>
        <div class="col-6">
            <label for="endDate" class="col-4 col-form-label">End Date</label>
            <div class="col-12">
                <div class="input-group date" id="datepicker">
                    <input type="date" class="form-control" id="endDate" name="endDate" />
                </div>
            </div>
            
        </div>
    </div>
    
</form>

@if (Model.courses.Count() > 0)
{
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Course Name</th>
                        <th>Course Description</th>
                        <th>Instructor</th>
                        <th>Start date</th>
                        <th>End date</th>
                        <th>Assignments</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cours in Model.courses)
                    {
                        <tr>
                            <td>@cours.CourseId</td>
                            <td>@cours.CourseName</td>
                            <td>@cours.Description</td>
                            @if (cours.Instructor != null)
                            {
                                <td>@cours.Instructor.Firstname @cours.Instructor.Lastname</td>
                            }
                            <td>@cours.StartDate</td>
                            <td>@cours.EndDate</td>
                            <td>
                                <ul>
                                    @foreach (var a in cours.Assignments)
                                    {
                                        <li>
                                            @a.Title ( Number of Submitions : @a.Submissions.Count())
                                        </li>
                                    }
                                </ul>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-9">
            <h1 class="display-4">There is no courses</h1>
        </div>
    </div>
}
